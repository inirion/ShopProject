<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:focusableInTouchMode="true">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/RegisterButtons"
        android:id="@+id/ScrollVierRegister">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/HouseNumberUF"
                    android:layout_weight="1"
                    android:hint="Numer domu..."
                    android:inputType="number" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/PostalCodeUF"
                    android:layout_weight="1"
                    android:hint="Kod pocztowy..."
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/PhoneRFL"
                android:layout_below="@+id/StreetRFL"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/PhoneNumberUF"
                    android:layout_weight="1"
                    android:hint="Numer telefonu..."
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/CityRFL"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/StreetRFL">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/StreetUF"
                    android:layout_weight="1"
                    android:hint="Nazwa ulicy..." />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/BankAccountRF"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/CityRFL">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/CityNameUF"
                    android:layout_weight="1"
                    android:hint="Nazwa miasta..." />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/PasswordRF"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/BankAccountRFL">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/BankAccountUF"
                    android:layout_weight="1"
                    android:hint="Numer konta bankowego..."
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/EmailRF"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/PasswordRFL">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/PasswordUF"
                    android:layout_weight="1"
                    android:hint="Hasło..."
                    android:inputType="textVisiblePassword" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/LastNameRF"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/EmailRFL">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/EmailUF"
                    android:layout_weight="1"
                    android:hint="Email..."
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/FirstNameRF"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/LastNameRFF">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/LastNameUF"
                    android:layout_weight="1"
                    android:hint="Imię..." />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/FirstNameUF"
                    android:layout_weight="1"
                    android:hint="Nazwisko..."
                    android:layout_width="200dp"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/RegisterButtons">

        <Button
            android:text="Anuluj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CancelBtnUF"
            android:layout_weight="1" />

        <Button
            android:text="Aktualizuj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateBtn"
            android:layout_weight="1"
            android:elevation="1dp" />
    </LinearLayout>

</RelativeLayout>
